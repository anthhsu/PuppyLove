<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PuppyLove.Views.SignupPage3">
    <ContentPage.Content>
        <StackLayout
            Padding="20">
            <Label Text="Below best describes my current status:"
                HorizontalOptions="CenterAndExpand" />
            <Picker
                Title="Select Below"                
                ItemsSource="{Binding StatusList}"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                WidthRequest="400"/>
            <Button 
                x:Name="ButtonSignup3Next"            
                Text="Next"
                HorizontalOptions="Center"
                VerticalOptions="Center"            
                WidthRequest="200"
                HeightRequest="50"
                Clicked="Handle_Signup3Next_Clicked"
                BorderWidth="1"
                BorderColor="Black"/>                
        </StackLayout>
    </ContentPage.Content>
</ContentPage>