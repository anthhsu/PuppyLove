<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PuppyLove.Views.PhotoUploadPage1">
    <ContentPage.Content>
        <StackLayout
            Padding="20">
            <Button
                x:Name="ButtonPhoto1"
                Image="PhotoUpload1.png"
                HorizontalOptions="Center"
                VerticalOptions="Center"            
                WidthRequest="250"
                HeightRequest="200"
                Clicked="Handle_Photo1_ClickedAsync"/>
            <Label Text="Please upload a picture of yourself..."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button
                x:Name="ButtonPhotoUpload1Next"
                Text="Next"
                HorizontalOptions="Center"
                VerticalOptions="Center"            
                WidthRequest="200"
                HeightRequest="50"
                BorderWidth="1"
                BorderColor="Black"
                Clicked="Handle_PhotoUpload1Next_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>