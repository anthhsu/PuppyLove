<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PuppyLove.Views.PhotoUploadPage2">
    <ContentPage.Content>
        <StackLayout
            Padding="20">
            <Button
                x:Name="ButtonPhoto2"
                Image="PhotoUpload2.png"
                HorizontalOptions="Center"
                VerticalOptions="Center"            
                WidthRequest="250"
                HeightRequest="200"
               />
            <Label Text="Please upload a photo of your furry friend..."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button
                x:Name="ButtonPhotoUpload2Next"
                Text="Next"
                HorizontalOptions="Center"
                VerticalOptions="Center"            
                WidthRequest="200"
                HeightRequest="50"
                BorderWidth="1"
                BorderColor="Black"
                Clicked="Handle_PhotoUpload2Next_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>